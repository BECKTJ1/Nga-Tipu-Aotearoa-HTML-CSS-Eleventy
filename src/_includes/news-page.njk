---
layout: 'base.njk'
---
    
    <!-- = = = = = = = = = = = = = = = = = = = = = = = = = = = = = =
        ARTICLE
      = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = -->

      <article class="plantpage__card">
          <h2 class="plantpage__card__desc__h2">{{ title }}</h2>

          <figure class="plantpage__card__image">
            <img  src="{{ image }}" alt="{{ imageAlt }}">
            <figcaption>
                {{ imageAlt }}
            </figcaption>
          </figure>

          <h3 class="plantpage__card__desc__h3">{{ newsIntro }}</h3>
              
          <p class="plantpage__card__desc__intro">{{ newsText }}</p>

          {{ content | safe }}

      </article>